/* pages/course/pay/pay.wxss */
.pay_top{
  padding: 0 31rpx;
}
page{
  background-color: #fcfcfc;
}
.pay_text{
  line-height: 90rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(11,11,11,1);
}
.payitem{
    display: flex;
    justify-content: space-between;
}
.payitem_img{
    width: 245rpx;
    height: 135rpx;
    background-color: rebeccapurple;
    margin-right: 23rpx
} 
.payitem_right{
    flex-grow: 1;
}
.title_price{
   display: flex;
   justify-content: space-between;
   font-size:26rpx;
   color:rgba(44,44,44,1);
}
.title_price text{
  max-width: 300rpx;
  display: inline-block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.purchase{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color:rgba(155,151,151,1);
  margin-top: 70rpx;
}
.pay_price{
  color: #E65353;
}
.payclass .payclass_yu .text,.payclass .payclass_wx .text{
    padding-left: 35rpx;
}
.payclass .payclass_yu ,.payclass .payclass_wx{
display: flex;
    justify-content: space-between;
}
.payclass{
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  color:rgba(78,78,78,1);
  line-height: 95rpx;
  border-bottom: 10rpx solid  #F6F7F7;
}
.payclass>view{
 border-top: 1px solid #E5E5E5;
  padding: 0 31rpx;
}
.balance>view{
  padding: 0 31rpx;
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color:rgba(155,151,151,1);
  display: flex;
  line-height: 81rpx;
  border-bottom: 1px solid #D2D2D2;
  justify-content: space-between
}
.balance .red {
  color: #E65353;
}
.Agree{
  padding: 0 31rpx;
  display: flex;
  font-size: 10px;
  font-family:MicrosoftYaHei;
  color:rgba(155,151,151,1);
  line-height: 86rpx;
}
.Agree view text{
  color: #3678D4
  
}
.footerbottom{
  display: flex;
  padding: 0 31rpx;
  justify-content: space-between
}
.footerbottom>view{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: 84rpx;
}
._left{
  font-size:24rpx;
  font-family:MicrosoftYaHei;
  color:rgba(155,151,151,1);
  background-color: white;
}
._right{
  font-size:28rpx;
  font-family:MicrosoftYaHei;
  color:rgba(255,255,255,1);
  background-color: #3678D4;
}
radio{
  transform: scale(0.6);
}
.payclass_yu{
  border-style: solid ;
  border-color: #E5E5E5;
  border-width: 1rpx 0 1rpx 0;
}
navigator{
  display:inline-block; 
}
.Agree checkbox{
  transform: scale(0.6)
}