<!--pages/my/reg/reg.wxml-->
<view class='banner'>
  <image src='/images/reg/banner.png'></image>
</view>
<view class='form'>
  <view>
    <view class='view_form username'>
      <view>昵称</view>
      <input placeholder='昵称' bindinput='watchUname'></input>
    </view>
    <view class='view_form password'>
      <view>密码</view>
      <input type='password' placeholder='请设置密码6-20字符' bindinput='watchPwd'></input>
    </view>
    <view class='view_form rePassword'>
      <view>确认密码</view>
      <input type='password' placeholder='请确认您的密码' bindinput='watchCpwd'></input>
    </view>
    <button class='butFir' open-type='getPhoneNumber' bindgetphonenumber="getPhoneNumber">注册</button>
  </view>
  <view id='navTobind'><navigator hover-class="none" url='/pages/my/bind/bind'>绑定已有账号</navigator></view>
</view>